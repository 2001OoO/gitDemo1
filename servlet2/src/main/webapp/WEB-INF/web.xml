<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/mybatis</param-value>
    </context-param>


    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.nk.servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getc</servlet-name>
        <servlet-class>com.nk.servlet.GetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getc</servlet-name>
        <url-pattern>/getc</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>st</servlet-name>
        <servlet-class>com.nk.servlet.ServletTest3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>st</servlet-name>
        <url-pattern>/st</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>st4</servlet-name>
        <servlet-class>com.nk.servlet.ServletTest4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>st4</servlet-name>
        <url-pattern>/st4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>st5</servlet-name>
        <servlet-class>com.nk.servlet.ServletTest5</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>st5</servlet-name>
        <url-pattern>/st5</url-pattern>
    </servlet-mapping>

</web-app>
